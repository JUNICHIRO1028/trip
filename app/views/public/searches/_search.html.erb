  <%= form_with url: search_path, local: true, method: :get do |f| %>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true">
        <%= f.select :range, options_for_select([['投稿タイトル'], ['ユーザー名']]), class: 'form-control' %>
      </span>
      <span class="input-group-text" aria-hidden="true">
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), class: "form-control" %>
      </span>
      <%= f.text_field :word, class:"form-control", placeholder:"タイトルorユーザー名" %>
    </div>
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
  <% end %>
