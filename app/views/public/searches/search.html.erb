<h2>Results index</h2>

<!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
      <% @users.each do |user| %>
        <%= image_tag user.get_profile_image(50, 50) %>
        <%= user.name %>
      <% end %>
  <% else %>
<!--検索対象モデルがUserではない時(= 検索対象モデルがpost_imageの時) -->
    <h2>PostImages search for "<%= @word %>"</h2>
    <% @post_images.each do |post_image| %>
          <%= link_to user_path(post_image.user) do %>
            <%= image_tag post_image.user.get_profile_image(50, 50) %>
          <% end %>
        <%= link_to post_image.title, post_image_path(post_image.id) %>
        <%= post_image.body %>
      <% end %>
  <% end %>
